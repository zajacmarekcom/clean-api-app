@page "/dashboard"
@model Clean.Presentation.Admin.Pages.Dashboard

@{
    Layout = "Shared/_Layout";
}

<h2>Dashboard</h2>

<div class="row w-100 mt-6">
    <div class="col col-2"></div>
    <div class="col col-8">
        <table class="table">
            <thead>
            <tr>
                <th>Email</th>
                <th>Roles</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>