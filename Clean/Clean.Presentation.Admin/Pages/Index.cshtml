@page
@{
    Layout = "Shared/_Layout";
}

@model Clean.Presentation.Admin.Pages.Index
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="row w-100 mt-6 mx-auto">
    <div class="col col-8 col-span-2">
        <h2>Login</h2>
        
        <form method="post">
            <div class="input-group w-100 mb-3">
                <input class="form-control" placeholder="Email" asp-for="Model!.Email" type="email" required/>
            </div>
            <div class="input-group w-100 mb-3">
                <input class="form-control" placeholder="Password" asp-for="Model!.Password" type="password" required/>
            </div>
            <div class="input-group w-100 mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Model!.RememberMe" id="remember">
                    <label class="form-check-label" for="remember">
                        Zapamiętaj mnie
                    </label>
                </div>
            </div>
            <button type="submit" class=" w-100 btn btn-success">Login</button>
        </form>
    </div>
</div>